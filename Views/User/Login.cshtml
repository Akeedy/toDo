@{
    ViewData["Title"] = "User Page";
}
<div class="container">
    <div class=" row d-flex justify-content-center align-items-center ">
        <div class=" col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body ">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-1 mt-1">Sign up</p>

                            <form class="mx-1 mx-md-4" asp-controller="Authentication" asp-action="Login" method="post">

                                <div class="" asp-validation-summary="ModelOnly"></div>

                                <div class="flex-row align-items-center mb-2">
                                    <label class="form-label" for="form3Example3c">Email</label>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="email" placeholder="Alex@gmail.com" id="form3Example3c"
                                            class="form-control" name="Email" />
                                    </div>
                                    @* <span asp-validation-for=""></span> *@
                                </div>

                                <div class="flex-row align-items-center mb-2">
                                    <label class="form-label" for="form3Example4c">Password</label>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="password" id="form3Example4c" placeholder="*********"
                                            class="form-control" name="Password" />
                                    </div>
                                    @* <span asp-validation-for="Password"></span> *@
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                </div>

                            </form>

                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                class="img-fluid" alt="Sample image">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
